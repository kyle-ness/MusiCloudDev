
@{
    ViewData["Title"] = "Welcome Admin";
    Layout = "~/Views/Shared/_LoggedInAdminLayout.cshtml";

}

<section class="playlist-section spad">
    <div class="container-fluid">
        <div class="section-title">
            <h2> Welcome @User.Identity.Name</h2>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-lg-6">
                <div class="section-title">
                    <h3>Available management actions</h3>
                </div>
            </div>
            <div class="clearfix"></div>
            <div id="AllPlaylists" class="row playlist-area">
                <form>
                    <a asp-controller="Admins" asp-action="Index" class="site-btn site-login">Edit Admins</a>
                    <a asp-controller="Artists" asp-action="Index" class="site-btn site-login">Edit Artists</a>
                    <a asp-controller="Concerts" asp-action="Index" class="site-btn site-login">Edit Concerts</a>
                    <a asp-controller="Albums" asp-action="Index" class="site-btn site-login">Edit Albums</a>
                    <a asp-controller="Songs" asp-action="Index" class="site-btn site-login">Edit Songs</a>
                    <a asp-controller="Admins" asp-action="Statistics" class="site-btn site-login">Get Statistics</a>
                    <a asp-controller="Tweets" asp-action="Index" class="site-btn site-login">Tweets</a>
                </form>
            </div>
        </div>
    </div>
</section>








