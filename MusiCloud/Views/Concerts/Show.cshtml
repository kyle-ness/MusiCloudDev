@model MusiCloud.Models.Artist

@{
    ViewData["Title"] = "Upcoming concerts";
    Layout = "~/Views/Shared/_LoggedInLayout.cshtml";
}

<section class="contact-section">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6 p-0">
                <!-- Map -->
                <div id="MapDiv" style="width: 1000px; height: 1000px">
                </div>
            </div>
            <div class="col-lg-6 p-0">
                <div class="contact-warp">
                    <div class="section-title mb-0">
                        <h2>@Html.DisplayFor(model => model.Name) Upcomings</h2>
                    </div>
                    <p>Follow your artist in the world, and view upcoming tours.</p>
                    <ul id="concertDetails">
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<input type="hidden" id="ArtistId" value="@Html.DisplayFor(model => model.Id)"</input>

@section Scripts
{
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDw4M0s-wdhkjGK1L5BkWzyilxKp15QnGY&callback=initMap&libraries=&v=weekly" defer></script>
    <script src="~/js/Concerts.js"></script>
}